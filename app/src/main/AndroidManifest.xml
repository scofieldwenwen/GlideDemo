<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.scofield.glidedemo">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.scofield.glidedemo.MyGlideModule"
            android:value="GlideModule"/>

        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activity.LoadImageActivity">
        </activity>
        <activity android:name=".activity.LoadGifActivity">
        </activity>
        <activity android:name=".activity.CacheActivity"/>
        <activity android:name=".activity.TargetActivity">
        </activity>
        <activity android:name=".activity.RotateImageActivity">
        </activity>
        <activity android:name=".activity.TransformationsActivity">
        </activity>
    </application>

</manifest>